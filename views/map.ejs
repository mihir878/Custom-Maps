    <script>
        function loadMap(){
            const allahabad = {lat : 25.4920,lng : 81.8639};
            const safety = <%= safety %>;
            const entertainment = <%= entertainment %>;
            const source = "<%= src %>";
            const destination = "<%= dest %>";
            const index = '<%-index%>';
            const API_KEY = '<%-API_KEY%>';
            //backchodh
            const url = 'https://maps.googleapis.com/maps/api/js?key=' + API_KEY + '&callback=initMap&libraries=places&v=weekly';
            //remain checkbox checked
            if(safety)
            document.getElementById('safetyBox').checked=true;
            else if(entertainment)
            document.getElementById('entertainmentBox').checked=true;
            
            console.log(safety);
            console.log(entertainment);
            if(source == "" || destination == ""){
            //Initializing map
            const map = new google.maps.Map(document.getElementById('map'),{
                zoom : 17,
                center : allahabad,
            });

            //Iniializing Marker
            const marker = new google.maps.Marker({
                position : allahabad,
                map : map,
            });
          }else{
            const directionsService = new google.maps.DirectionsService();

            const map = new google.maps.Map(document.getElementById("map"));

            directionsService.route(
              {
                origin: source,
                destination: destination,
                travelMode: "DRIVING",
                provideRouteAlternatives: true,
              },
              (response,status)=>{
                if(status === "OK"){
                //console.log(response);
                for(let i=0;i<response.routes.length;i++)
                  {
                    let directionsRenderer = new google.maps.DirectionsRenderer({
                    polylineOptions : {
                      strokeColor : "red",
                      }
                    });

                  directionsRenderer.setMap(map);
                  directionsRenderer.setRouteIndex(i);
                  directionsRenderer.setDirections(response);
                  }

                for(let i=0;i<response.routes.length;i++)
                  {
                    if(i == index)
                      {
                        let directionsRenderer = new google.maps.DirectionsRenderer({
                        polylineOptions : {
                          strokeColor : safety?"#11F937":"#1909A5"
                        }
                      });

                      directionsRenderer.setMap(map);
                      directionsRenderer.setRouteIndex(i);
                      directionsRenderer.setDirections(response);
                      }
                  }

                }else{
                window.alert(status);
                window.location.replace("http://localhost:5000");
                }
              }
            );

          }
        }
    </script>

